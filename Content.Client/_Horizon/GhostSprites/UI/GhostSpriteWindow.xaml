<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'ghost-sprite-window-title'}"
               MinSize="400 500"
               SetSize="400 500">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
        <Label Text="{Loc 'ghost-sprite-window-description'}" Margin="8 4" />
        <ScrollContainer Name="SpriteScroll" VerticalExpand="True" HorizontalExpand="True" HScrollEnabled="False" Margin="4">
            <GridContainer Name="SpriteGrid" Columns="3" HorizontalAlignment="Center" />
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
