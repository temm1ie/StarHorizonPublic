<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      MinSize="600 360"
                      SetSize="1000 600">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Name="NextOfferLabel"
                   Text="{Loc 'salvage-expedition-window-next'}"
                   SetWidth="220"
                   Margin="5"/>
            <ProgressBar Name="NextOfferBar"
                         HorizontalExpand="True"
                         MinValue="0"
                         MaxValue="1"
                         SetHeight="25"/>
            <Label Name="NextOfferText" Text="0.00"
                   Margin="5"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'goals-console-specification-label'}"
                   SetWidth="220"
                   Margin="5"/>
            <OptionButton Name="SpecificationButton" HorizontalAlignment="Left"/>
        </BoxContainer>
        <controls:HLine Color="#404040" Thickness="2" Margin="0 5 0 5"/>
        <ScrollContainer VerticalExpand="True" HorizontalExpand="True" Margin="4" HScrollEnabled="False">
            <GridContainer Name="Container"
                           Columns="3"
                           VerticalExpand="True"
                           Margin="5 8"/>
        </ScrollContainer>
    </BoxContainer>
</controls:FancyWindow>
