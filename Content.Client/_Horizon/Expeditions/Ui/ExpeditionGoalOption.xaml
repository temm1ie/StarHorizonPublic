<PanelContainer xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                HorizontalExpand="True"
                VerticalExpand="True"
                StyleClasses="PdaBorderRect"
                Name="BigPanel"
                Margin="4">
    <BoxContainer Orientation="Vertical"
                  VerticalExpand="True">
        <!-- Title box -->
        <controls:StripeBack>
            <Label Name="TitleStripe"
                   HorizontalAlignment="Center"
                   Margin="0 5 0 5"/>
        </controls:StripeBack>
        <SpriteView Name="Icon"
                    Scale="6 6"
                    Access="Public"
                    Margin="4"/>
        <ScrollContainer HorizontalExpand="True"
                         VerticalExpand="True"
                         HScrollEnabled="False"
                         MinHeight="120"
                         Margin="4">
            <RichTextLabel Name="DescriptionLabel"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       MaxWidth="256"
                       VerticalExpand="True"
                       Access="Public"/>
        </ScrollContainer>

        <RichTextLabel Name="RequiredAmountLabel"
                       HorizontalExpand="True"
                       Margin="4"/>
        <RichTextLabel Name="RewardLabel"
                       HorizontalExpand="True"
                       Margin="4"/>
        <RichTextLabel Name="AdditionalRewardLabel"
                       HorizontalExpand="True"
                       Visible="False"
                       Margin="4"/>

        <Button Name="ClaimButton"
                HorizontalExpand="True"
                VerticalAlignment="Bottom"
                Access="Public"
                Text="{Loc 'offering-window-claim'}"/>
    </BoxContainer>
</PanelContainer>
